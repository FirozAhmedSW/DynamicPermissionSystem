@model IEnumerable<DynamicPermissionSystem.Models.Role>
@using DynamicPermissionSystem.Models
@inject DynamicPermissionSystem.Models.ApplicationDbContext DbContext
@{
    ViewBag.Title = "Role List";

    var roleId = Context.Session.GetInt32("RoleId") ?? 0;

    // 🔹 Fetch permissions for "Roles" menu
    var roleMenu = DbContext.Menus.FirstOrDefault(m => m.Controller == "Role" && m.Action == "Index");
    var permissions = DbContext.RoleMenuPermissions.FirstOrDefault(rp => rp.RoleId == roleId && rp.MenuId == (roleMenu.Id));
}

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary"><i class="bi bi-person-badge"></i> Roles</h3>

        @* ✅ Show Add Role button only if CanCreate is true *@
        @if (permissions?.CanCreate == true)
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Role
            </a>
        }
    </div>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">@TempData["success"]</div>
    }

    <table class="table table-striped table-bordered shadow-sm align-middle">
        <thead class="table-primary text-center">
            <tr>
                <th style="width:10%">#</th>
                <th>Role Name</th>
                <th style="width:25%">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int i = 1;
                foreach (var role in Model)
                {
                    <tr>
                        <td class="text-center">@i</td>
                        <td>@role.Name</td>
                        <td class="text-center">
                            @* ✅ Show Edit button only if CanEdit is true *@
                            @if (permissions?.CanEdit == true)
                            {
                                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            }

                            @* ✅ Show Delete button only if CanDelete is true *@
                            @if (permissions?.CanDelete == true)
                            {
                                <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this role?')">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No roles found</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
