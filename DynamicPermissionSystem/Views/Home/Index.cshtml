@{
    ViewBag.Title = "Dashboard";
    var userName = ViewBag.UserName;
}

<div class="">
    <div class="card shadow-lg p-4 border-0 rounded-4">
        <div class="card-body text-center">
            <h2 class="fw-bold text-primary mb-3">📊 Dashboard</h2>
            <p class="fs-5 text-muted">
                Welcome back, <span class="fw-semibold text-dark">@userName</span> 👋
            </p>
            <hr class="my-4" />

            <div class="row text-center">
                <div class="col-md-3 mb-3">
                    <div class="card bg-light border-0 shadow-sm p-3 rounded-3">
                        <h5 class="fw-semibold text-secondary">Total Menus</h5>
                        <p class="display-6 text-primary">@ViewBag.TotalMenus</p>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-light border-0 shadow-sm p-3 rounded-3">
                        <h5 class="fw-semibold text-secondary">Total Users</h5>
                        <p class="display-6 text-success">@ViewBag.TotalUsers</p>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-light border-0 shadow-sm p-3 rounded-3">
                        <h5 class="fw-semibold text-secondary">Roles</h5>
                        <p class="display-6 text-warning">@ViewBag.TotalRoles</p>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card bg-light border-0 shadow-sm p-3 rounded-3">
                        <h5 class="fw-semibold text-secondary">Permissions</h5>
                        <p class="display-6 text-danger">@ViewBag.TotalPermissions</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
