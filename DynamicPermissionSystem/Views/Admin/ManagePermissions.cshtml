


@using DynamicPermissionSystem.Models
@{
    var users = ViewBag.Users as List<User> ?? new List<User>();
    var menus = ViewBag.Menus as List<Menu> ?? new List<Menu>();
    var perms = ViewBag.Perms as List<RoleMenuPermission> ?? new List<RoleMenuPermission>();
    var selectedUserId = ViewBag.SelectedUserId as int? ?? 0;
    var selectedUserRole = ViewBag.SelectedUserRole as string ?? "";
}

<div class="mt-4">
    <h3 class="mb-4 text-primary fw-bold">👤 Manage User Permissions</h3>

    <!-- ✅ User Select -->
    <form method="get" action="/Admin/ManagePermissions" id="userForm">
        <div class="row mb-3 align-items-center">
            <div class="col-md-4">
                <label class="form-label fw-semibold">Select User</label>
                <select name="userId" class="form-select" onchange="this.form.submit()">
                    @foreach (var u in ViewBag.users)
                    {
                        if(u.Id == ViewBag.SelectedUser){

                            <option value="@u.Id" selected> @u.UserName</option>
                        }else{
                            <option value="@u.Id"> @u.UserName</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">User Role</label>
                <input type="text" class="form-control" value="@selectedUserRole" readonly />
            </div>
            <div class="col-md-4">
            
            </div>
        </div>
    </form>

    <form method="post" asp-action="SavePermissions">
        <input type="hidden" name="userId" value="@selectedUserId" />

        <table class="table table-bordered align-middle shadow-sm">
            <thead class="table-primary text-center">
                <tr>
                    <th>Menu</th>
                    <th>
                        <input type="checkbox" id="checkAllView" /> View
                    </th>
                    <th>
                        <input type="checkbox" id="checkAllCreate" /> Create
                    </th>
                    <th>
                        <input type="checkbox" id="checkAllEdit" /> Edit
                    </th>
                    <th>
                        <input type="checkbox" id="checkAllDelete" /> Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in menus)
                {
                    var row = perms.FirstOrDefault(p => p.MenuId == m.Id);
                    <tr>
                        <td>@m.Name</td>
                        <td class="text-center">
                            <input type="checkbox" class="chk-view" name="flags" value="view_@m.Id" @(row?.CanView == true ? "checked" : "") />
                        </td>
                        <td class="text-center">
                            <input type="checkbox" class="chk-create" name="flags" value="create_@m.Id" @(row?.CanCreate == true ? "checked" : "") />
                        </td>
                        <td class="text-center">
                            <input type="checkbox" class="chk-edit" name="flags" value="edit_@m.Id" @(row?.CanEdit == true ? "checked" : "") />
                        </td>
                        <td class="text-center">
                            <input type="checkbox" class="chk-delete" name="flags" value="delete_@m.Id" @(row?.CanDelete == true ? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end">
            <button type="submit" class="btn btn-primary px-4">💾 Save Permissions</button>
        </div>
    </form>


</div>

<script>
    // View column
    document.getElementById("checkAllView").addEventListener("change", function () {
        document.querySelectorAll(".chk-view").forEach(cb => cb.checked = this.checked);
    });

    // Create column
    document.getElementById("checkAllCreate").addEventListener("change", function () {
        document.querySelectorAll(".chk-create").forEach(cb => cb.checked = this.checked);
    });

    // Edit column
    document.getElementById("checkAllEdit").addEventListener("change", function () {
        document.querySelectorAll(".chk-edit").forEach(cb => cb.checked = this.checked);
    });

    // Delete column
    document.getElementById("checkAllDelete").addEventListener("change", function () {
        document.querySelectorAll(".chk-delete").forEach(cb => cb.checked = this.checked);
    });
</script>

<style>
    .table {
        background-color: #fff;
        border-radius: 8px;
    }

    .form-select, .form-control {
        border-radius: 8px;
    }
</style>

