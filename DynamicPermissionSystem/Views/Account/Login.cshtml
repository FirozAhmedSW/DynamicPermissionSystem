@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
<form asp-action="Login" method="post">
    <div>
        <label>Username</label>
        <input name="username" />
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="password" />
    </div>
    <button type="submit">Login</button>
</form>
@if (ViewBag.Error != null)
{
     <div style="color:red">@ViewBag.Error</div>
}