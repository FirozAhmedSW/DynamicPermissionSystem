@model DynamicPermissionSystem.Models.Menu

<h3>Menu Details</h3>

<div class="card mt-3">
    <div class="card-body">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Controller:</strong> @Model.Controller</p>
        <p><strong>Action:</strong> @Model.Action</p>
        <p><strong>Parent Id:</strong> @Model.ParentId</p>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
