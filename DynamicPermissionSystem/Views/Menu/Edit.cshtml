@model DynamicPermissionSystem.Models.Menu
@{
    var menus = ViewBag.Menus as List<DynamicPermissionSystem.Models.Menu>;
}

<h3>Edit Menu</h3>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Controller</label>
        <input asp-for="Controller" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Action</label>
        <input asp-for="Action" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Parent Menu</label>
        <select asp-for="ParentId" class="form-select">
            <option value="">-- Root Menu --</option>
            @foreach (var m in menus)
            {
                var selected = m.Id == Model.ParentId ? "selected" : "";
                <option value="@m.Id" selected="@(m.Id == Model.ParentId ? "selected" : null)">@m.Name</option>

            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
